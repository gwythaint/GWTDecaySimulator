<module rename-to='RadDecaySimulator'>
  <inherits name='com.google.gwt.user.User'/>
  <inherits name='com.google.gwt.user.theme.clean.Clean'/>
  <inherits name='com.google.web.bindery.event.EventBinder'/>
  <entry-point class='net.ntanet.client.RadDecaySimulator'/>
  <source path='client'/>
  
  <!-- allow Super Dev Mode -->
  <add-linker name="xsiframe"/>

  <!-- begin retina display solution proposed 
  <define-property name="display.type" values="retina,normal"/>

